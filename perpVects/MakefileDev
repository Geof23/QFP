CC := g++

CC_OPTS ?= -Wuninitialized

CC_REQUIRED := -std=c++11  -lm -Wno-shift-count-overflow 
#-lstdc++ -Wl,-rpath,/uufs/chpc.utah.edu/common/home/u0422778/software/root/lib/libstdc++.so.6

INCFILES := ../gdb/inst

INC := -I $(INCFILES)



.phony : all

all : gcc gcc_g

gcc : test.cpp $(INCFILES)
	$(CC) $(CC_OPTS) $(CC_REQUIRED) $(INC) $< -o $@

gcc_g : test.cpp $(INCFILES)
	$(CC) $(CC_OPTS) -g $(CC_REQUIRED) $(INC) $< -o $@

.phony : clean

clean :
	-rm $(CC)*
